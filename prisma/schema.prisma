generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @default(autoincrement())
  email        String         @id
  phone_number String
  full_name    String
  college_name String
  department   String
  verified     Boolean
  firebase_id  String
  year         Int
  created_at   DateTime       @default(now())
  passes       Pass[]
  Registration Registration[]
}

model Pass {
  id         Int    @default(autoincrement())
  email      String
  pass       pass
  created_at String
  userEmail  String
  user       User   @relation(fields: [userEmail], references: [email])

  @@id([email, pass])
}

model Event {
  event_name   String
  id           Int         @id
  pass         pass
  department String
  size String?
  venue String? @default("TBD")
  time String? @default("00:00")
  sections Json? 
  Registration Registration[]
}

model Registration {
  id        Int    @id @default(autoincrement())
  userEmail String
  eventId   Int
  event     Event  @relation(fields: [eventId], references: [id])
  user      User   @relation(fields: [userEmail], references: [email])
}

model EventHead {
  eventId   Int @unique
  userEmail String 
}

enum pass {
  tech
  nonTech
  bmeHack
  cseHack
  wsCentral
  wsBme
}

enum type {
  workshop
  hackathon
  event
}